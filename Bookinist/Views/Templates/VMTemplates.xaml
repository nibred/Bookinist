<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:Bookinist.Views"
    xmlns:vm="clr-namespace:Bookinist.ViewModels">

    <DataTemplate DataType="{x:Type vm:BooksViewModel}">
        <v:BooksView DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BuyersViewModel}">
        <v:BuyersView DataContext="{Binding}" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StatisticViewModel}">
        <v:StatisticView DataContext="{Binding}" />
    </DataTemplate>

</ResourceDictionary>