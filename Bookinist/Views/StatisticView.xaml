<UserControl
    x:Class="Bookinist.Views.StatisticView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bookinist.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <ListBox
                Width="150"
                Height="298"
                Margin="10"
                ItemsSource="{Binding Bestsellers}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Key.Name, StringFormat='{}{0} - '}">
                            <Run
                                FontWeight="Bold"
                                Foreground="DarkOrange"
                                Text="{Binding Value, Mode=OneWay}" />
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button
                Width="150"
                Padding="5"
                Command="{Binding BestsellersCommand}"
                Content="Загрузить данные" />
        </StackPanel>
    </Grid>
</UserControl>
