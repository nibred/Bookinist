<Window
    x:Class="Bookinist.Views.Windows.BookEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bookinist.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Bookinist.ViewModels"
    Title="BookEditorWindow"
    Width="400"
    Height="120"
    MinWidth="400"
    MinHeight="200"
    d:DataContext="{d:DesignInstance {x:Type vm:BookEditorViewModel},
                                     IsDesignTimeCreatable=True}"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <DockPanel Margin="5">
        <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top">
            <Run Text="{Binding BookID, Mode=OneWay, StringFormat=Книга ID:{0}}" />
            <LineBreak />
            <Run Text="{Binding SelectedCategory.Name, StringFormat={}Категория:{0}}" />
        </TextBlock>
        <UniformGrid DockPanel.Dock="Bottom" Rows="1">
            <Button
                Margin="3"
                Command="{Binding EditBookCommand}"
                CommandParameter="False"
                Content="Отмена" />
            <Button
                Margin="3"
                Command="{Binding EditBookCommand}"
                Content="OK"
                IsDefault="True" />
        </UniformGrid>
        <UniformGrid>
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="Название:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5,0"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="Категория:" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,5"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}" />
            </Grid>
        </UniformGrid>
    </DockPanel>
</Window>
